<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darck</item>
        <item name="colorPrimaryDark">@color/purpely</item>
        <item name="colorAccent">@color/lightGreen</item>
        <!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <!--        <item name="android:statusBarColor">@color/colorPrimaryDark</item>-->
        <!--        <item name="android:windowLightStatusBar">true</item>-->

        <!--        <item name="windowActionBar">false</item>-->
        <!--        <item name="windowNoTitle">true</item>-->


        <item name="shapeAppearanceSmallComponent">@style/AppShapeRoundedApprence.smallComponent
        </item>


    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">40dp</item>
        <item name="cornerSizeBottomLeft">40dp</item>
    </style>


    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorAccent">#fff</item>
    </style>

    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Rounded
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">60dp</item>
        <item name="cornerSizeTopLeft">60dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


    <style name="AppShapeRoundedApprence.smallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


    <style name="AppShapeApprence.smallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
    </style>


</resources>